<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>Mark Management System</display-name>

    <!-- AddMarkServlet -->
    <servlet>
        <servlet-name>AddMarkServlet</servlet-name>
        <servlet-class>com.servlet.AddMarkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMarkServlet</servlet-name>
        <url-pattern>/addMark</url-pattern>
    </servlet-mapping>

    <!-- UpdateMarkServlet -->
    <servlet>
        <servlet-name>UpdateMarkServlet</servlet-name>
        <servlet-class>com.servlet.UpdateMarkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateMarkServlet</servlet-name>
        <url-pattern>/updateMark</url-pattern>
    </servlet-mapping>

    <!-- DeleteMarkServlet -->
    <servlet>
        <servlet-name>DeleteMarkServlet</servlet-name>
        <servlet-class>com.servlet.DeleteMarkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteMarkServlet</servlet-name>
        <url-pattern>/deleteMark</url-pattern> <!-- Ensure this matches the form action -->
    </servlet-mapping>

    <!-- DisplayMarksServlet -->
    <servlet>
        <servlet-name>DisplayMarksServlet</servlet-name>
        <servlet-class>com.servlet.DisplayMarksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayMarksServlet</servlet-name>
        <url-pattern>/displayMarks</url-pattern>
    </servlet-mapping>

    <!-- ReportServlet -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/ReportServlet</url-pattern>
    </servlet-mapping>

    <!-- ReportCriteriaServlet -->
    <servlet>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <servlet-class>com.servlet.ReportCriteriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <url-pattern>/reportCriteria</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
